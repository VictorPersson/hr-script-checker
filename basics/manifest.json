{
  "manifest_version": 3,
  "name": "Hello Retail script finder",
  "version": "0.001",
  "description": "Extension for websites using Hello Retail services",
  "icons": {
    "128": "images/hello-avatar-round_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js", "js/popup.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": "images/hr_icon_inactive.png",
    "default_title": "Hello Retail extension",
    "default_popup": "html/popup.html#popup"
  },
  "permissions": ["activeTab", "webRequest", "storage"],
  "host_permissions": ["<all_urls>"]
}
