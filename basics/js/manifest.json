{
  "manifest_version": 3,
  "name": "Hello Retail script finder",
  "version": "0.001",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "hr_icon_inactive.png",
    "default_title": "Hello Retail extension",
    "default_popup": "../html/popup.html"
  },
  "permissions": ["activeTab", "webRequest"],
  "host_permissions": ["<all_urls>"]
}
